    {
      "src": "./src/assets/screenshots/desktop-1.png",
      "sizes": "1280x720",
      "type": "image/png",
      "platform": "wide",
      "label": "Hlavní mapa s areály"
    },
    {
      "src": "./src/assets/screenshots/desktop-2.png", 
      "sizes": "1280x720",
      "type": "image/png",
      "platform": "wide",
      "label": "Filtry a statistiky"
    },
    {
      "src": "./src/assets/screenshots/mobile-1.png",
      "sizes": "640x1136",
      "type": "image/png",
