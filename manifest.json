  "shortcuts": [
    {
      "name": "Mapa areálů",
      "description": "Zobrazit mapu všech areálů",
      "url": "/?view=map",
      "icons": [
        {
          "src": "./src/assets/icons/shortcut-map.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Statistiky",
      "description": "Přehled statistik a dat",
      "url": "/?view=stats",
      "icons": [
        {
          "src": "./src/assets/icons/shortcut-stats.png",
          "sizes": "192x192", 
          "type": "image/png"
        }
      ]
    },
    {
      "name": "AI Asistent",
      "description": "Otevřít AI asistenta",
      "url": "/?ai=open",
      "icons": [
        {
          "src": "./src/assets/icons/shortcut-ai.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    }
  ],
  
  "related_applications": [
    {
      "platform": "web",
      "url": "https://jvs-system.cz",
      "id": "cz.jvs-system.webapp"
    }
  ],
  
  "prefer_related_applications": false,
  
  "protocol_handlers": [
    {
      "protocol": "geo",
      "url": "/?coordinates=%s"
    }
  ],
  
  "file_handlers": [
    {
      "action": "/import",
      "accept": {
        "text/csv": [".csv"],
        "application/json": [".json"],
        "application/geo+json": [".geojson"]
      }
    }
  ],
  
  "edge_side_panel": {
    "preferred_width": 400
  },
  
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  
  "handle_links": "preferred",
  
  "capture_links": "existing-client-navigate"
}